<Window x:Class="ShipBattlesApp.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShipBattlesApp"
        mc:Ignorable="d"
        Title="Help" Height="900" Width="1440">
    <Grid>
        <Image Stretch="UniformToFill" Source="Images/background2.jpg"/>
        <Image Source="Images/help.png" HorizontalAlignment="Left" Height="100" Margin="624,116,0,0" VerticalAlignment="Top" Width="271"/>
        <TextBlock x:Name="Block_0" HorizontalAlignment="Left" Margin="547,275,0,0" TextWrapping="Wrap" Text="How to play Ship Battles:"  Foreground="White" 
            FontSize="35" VerticalAlignment="Top" Height="75"/>
        <TextBlock x:Name="Block_1" HorizontalAlignment="Left" Margin="125,350,0,0" TextWrapping="Wrap" Text="Control the direction and thrust of your ship with the WASD keys.
Shoot the enemies and enemy bases with the SPACEBAR. Pick up the orange repair kits for an extra hitpoint. Destroy all enemy bases to win! But if you lose all of your hitpoints, then you lose the
game!"  Foreground="White" FontSize="35" VerticalAlignment="Top" Height="218" Width="1232"/>
    </Grid>
</Window>
